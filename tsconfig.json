{
    "compilerOptions": {
        "rootDir": ".",
        "lib": ["ES2021"],
        "module": "commonjs",
        "target": "ES2021",
        "outDir": "build",
        "allowJs": true,
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "esModuleInterop": true
    },
    "exclude": ["build", "node_modules"],
    "include": ["src/**/*.ts", "src/**/*.js"],
    "allowSyntheticDefaultImports": true
}
